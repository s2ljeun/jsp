<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%@ page import="java.sql.*" %>
<!-- find.jsp -->
<html>
<head>
<title>학생찾기</title>
</head>
<body>
	<div align="center">
		<hr color="green" width="300">
		<h2>학 생 목 록 페 이 지</h2>
		<hr color="green" width="300">
		<table border="1" width="500">
			<tr>
				<th>아이디</th>
				<th>학생명</th>
				<th>학급명</th>
			</tr>
<%
	request.setCharacterEncoding("EUC-KR");
	String name = request.getParameter("name");
	
	if(name==null||name.trim().equals("")){
		response.sendRedirect("student.jsp");
		return;
	}
	
	Class.forName("oracle.jdbc.driver.OracleDriver");
	Connection con = DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:xe", "bigdata02", "bigdata02");
	
	String sql = "select count(*) from student where name=?";
	PreparedStatement ps = con.prepareStatement(sql);
	ps.setString(1, name);
	ResultSet rs = ps.executeQuery();
	rs.next(); //count함수는 해당하는 값이 없으면 0 리턴
	int count = rs.getInt(1); // count함수 실행결과는 ResultSet 타입이고, 컬럼은 결과값을 알려주는 1개뿐이므로 rs.getInt(1)
	if (count==0){%>
	<tr>
		<td colspan="3">찾으시는 학생 <%=name%>은 없습니다.</td>
	</tr>
<%		}else {
	sql = "select * from student where name = ?";
	ps = con.prepareStatement(sql);
	ps.setString(1, name);
	rs = ps.executeQuery();
	while(rs.next()){
		String id = rs.getString("id");
		//String name = rs.getString("name");
		String cname = rs.getString("cname");%>
		<tr>
			<td><%=id%></td>
			<td><%=name%></td>
			<td><%=cname%></td>
		</tr>	
<%		}%>
		
		<tr>
			<td colspan="3">찾으시는 학생 <%=name%>은 총 <%=count%>명 있습니다.</td>
		</tr>
		
<%		}%>
<%		
		rs.close();
		ps.close();
		con.close();
%>			
		</table>
	</div>	
</body>
</html>